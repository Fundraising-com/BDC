@{
   ViewBag.Title = "8 Items Catalogs";
   ViewBag.Description = "Easy Apparel 8 Items Catalogs";
   ViewBag.Keywords = "Catalogs 8 Items, fundraising ideas";
   Layout = "~/Views/Shared/_Layout.cshtml";
   ViewBag.CanonicalUrl = Url.Action("quick-and-easy", "Catalog");

}
<style>

   /* Extra small devices (phones, 600px and down) */
   @@media only screen and (min-width: 320px) {
      .btn-responsive {
         padding: 5px 5px;
         font-size: 18px;
         line-height: 1;
         border-radius: 0px;
      }
   }

   /* Small devices (portrait tablets and large phones, 600px and up) */
   @@media only screen and (min-width: 600px) {
      .btn-responsive {
         padding: 15px 15px;
         font-size: 18px;
         line-height: 1;
         border-radius: 0px;
      }
   }

   /* Medium devices (landscape tablets, 768px and up) */
   @@media only screen and (min-width: 768px) {
      .btn-responsive {
         padding: 15px 15px;
         font-size: 18px;
         line-height: 1;
         border-radius: 0px;
      }
   }

   /* Medium devices (landscape tablets, 768px and up) */
   @@media only screen and (min-width: 1024px) {
      .btn-responsive {
         padding: 20px 20px;
         font-size: 40px;
         line-height: 1;
         border-radius: 0px;
      }
   }


   @@media only screen and (min-width: 1300px) {
      .btn-responsive {
         padding: 50px 50px;
         font-size: 40px;
         line-height: 1;
         border-radius: 0px;
         width: 100%;
      }
   }

   .btn-border {
      padding: 10px 60px;
      border: none;
   }

   .btn-borderLG {
      padding: 20px 70px;
      border: none;
      border-radius: 0;
   }





   #exTab1 .tab-content {
      color: black;
      background-color: white;
      padding: 5px 15px;
      border: solid thin;
      border-color: lightgrey;
   }

   #exTab2 h3 {
      color: white;
      background-color: #01c9c7;
      padding: 5px 15px;
   }

   /* remove border radius for the tab */

   #exTab1 .nav-pills > li > a {
      border-radius: 0;
   }

   /* change border radius for the tab , apply corners on top*/

   #exTab3 .nav-pills > li > a {
      border-radius: 4px 4px 0 0;
   }

   #exTab3 .tab-content {
      color: black;
      background-color: white;
      padding: 5px 15px;
   }


   .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus {
      color: #ffffff;
      background-color: #01c9c7;
   }

</style>

<div class="container-fluid" style="padding-left:0px; padding-right:0px">
   <div class="row">
      <div class="col-lg-12" style="width:auto;overflow:hidden;">
         <img class="img-responsive" src="~/Content/catalog/banner_brochures.jpg" style="position:relative;display: inline-block; width:100%" alt="STANDARD 8 ITEMS" title="STANDARD 8 ITEMS" />
         <div style="position:absolute; top:30%; left:38%; font-size:2.5vw; color:#fff; text-align:center">QUICK AND EASY<br /><span style="font-size:2.0vw;">8 ITEMS</span></div>
      </div>
   </div>
   <div class="row">
      <div class="col-lg-12">
         <div class="row pagination-centered" style="margin:15px">
            
            <div class="col-lg-12">
               <div class="row">
                  <div class="col-lg-6">
                     <img src="~/Content/catalog/8items_03.jpg" class="img-responsive" style="display:block; margin-left:auto;margin-right:auto;margin-bottom:20px" />
                  </div>
                  <div class="col-lg-6">
                     <img src="~/Content/catalog/8items_06.jpg" class="img-responsive" style="display:block; margin-left:auto;margin-right:auto;margin-bottom:20px" />
                  </div>

               </div>

               <div id="exTab1" class="container">
                  <ul class="nav nav-pills">
                     <li class="active">
                        <a href="#1a" data-toggle="tab">PRODUCT DESCRIPTION</a>
                     </li>
                     <li>
                        <a href="#2a" data-toggle="tab">ADDITIONAL INFORMATION</a>
                     </li>
                     <li>
                        <a href="#3a" data-toggle="tab">PROFIT CHART</a>
                     </li>

                  </ul>

                  <div class="tab-content clearfix">
                     <div class="tab-pane active" id="1a">
                        <h3>8 ITEMS</h3>
                        <h4>
                           - No minimum on individuals items<br /><br />
                           - Minimum 24 items must be sold (or surcharge of $6 per item sold applies)<br /><br />
                           - You make $2 to $8 profit per item sold
                        </h4>
                        <a href="@Url.Action("getstarted", "home")" type="button" class="btn btn-default btn-lg btn-borderLG" style="border:none; margin-top:10px; color:white; background-color: #01c9c7 !important;" onclick="ga('send', 'event', 'GET STARTED', 'Click', 'GET STARTED');">GET STARTED</a>

                     </div>
                     <div class="tab-pane" id="2a">
                        <h3>PLACEHOLDER</h3>
                     </div>
                     <div class="tab-pane" id="3a">
                        <h3>PLACEHOLDER</h3>
                     </div>

                  </div>
               </div>


            </div>
         </div>
      </div>
   </div>

</div>
