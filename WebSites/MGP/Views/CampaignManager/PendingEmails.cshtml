@using GA.BDC.Web.MGP.Models.Branding
@model Int32
@{
    var eventBranding = ViewBag.Event as Event;
    ViewBag.Title = "Pending Emails";
    Layout = "~/Views/Shared/_campaignmanager.cshtml";    
}
<div id="information" ng-controller="campaignManagerController" ng-init="participantId = @eventBranding.ParticipantId; pendingEmailsTotalServerItems = @Model; pendingEmailsGetPagedDataAsync(pendingEmailsPagingOptions.pageSize, pendingEmailsPagingOptions.currentPage, '');">
   <div class="alert alert-info @(ViewBag.NumberOfContactsBeingCreated > 0 ? string.Empty : "hidden")">Due to a high demand We're currently processing the Contacts you just uploaded. We're still processing the last <strong>@ViewBag.NumberOfContactsBeingCreated</strong> Contact(s)</div>
   <div class="alert alert-warning @(ViewBag.HasContactsFlagged ? string.Empty : "hidden")">
      <strong>Due to the amount of Contacts that you've created, We need to verify that everything is OK. Please give us a couple of hours.</strong>
   </div>
   <div class="row">
      <div class="col-sm-12">
         <h1>Pending Emails</h1>
         <small>The following emails are in the queue to be sent.</small>
      </div>
   </div>
   <div class="row">
      <div class="col-sm-12">
         &nbsp;
      </div>
   </div>
   <div class="row">
      <div class="col-sm-3">
         @Html.Partial("Shared/_SendMessagesMenu", 3)
      </div>
      <div class="col-sm-9" ng-cloak>
         <div class="row">
            <div class="col-sm-12">
               <span class="text-info" ng-show="executingAction">Sending the information...</span>
            </div>
         </div>
         <div class="row">
            <div class="col-sm-12">
               <span class="text-success" ng-show="success">{{responseText}}</span>
            </div>
         </div>
         <div class="row">
            <div class="col-sm-12">
               <span class="text-danger" ng-show="resultFailed">{{responseText}}</span>
            </div>
         </div>
         <div class="row">
            <div class="col-sm-12">
               <div class="gridStyle" ng-grid="pendingEmailsGridOptions"></div>
            </div>
         </div>
      </div>
   </div>
</div>
<div class="modal fade" id="pendingEmailModal" tabindex="-1" role="dialog" aria-labelledby="pendingEmailSubject" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="pendingEmailSubject">{{pendingEmailSelected.Subject}}</h4>
            </div>
            <div class="modal-body">
                <strong>To:</strong><br />
                <span id="pendingEmailTo">{{pendingEmailSelected.To}}</span>
                <br />
                <br />
                <strong>Message:</strong><br />
                <span id="pendingEmailMessage">{{pendingEmailSelected.Body}}</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <link href="/Content/ng-grid.min.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
            $(".tip").tooltip({});
        });
    </script>
}