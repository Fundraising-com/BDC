                  <div class="col-xs-4">
                     @if (partnerBranding.Name == "efundraising.com")
                     {
                        <img src="/Content/images/public/content/main-logo.png" alt="Home" />

                     }
                     else if (partnerBranding.Name == "ezfund")
                     {
                        <a href="/" style="text-decoration:none"><img src="/Content/images/public/content/ezf-logo.png" alt="Home" border="0" /></a>
                     }
                     else
                     {
                        <a href="/" style="font-size: 18px; color:white; text-decoration:none">@partnerBranding.Name.ToUpper()</a>
                     }

                  </div>
                  <div class="col-xs-8 text-right @(hideTopMenu ? "hidden" : string.Empty)">
                     <a href="@Url.Action("HowItWorks", "Home")">how it works</a>
                     <a href="@Url.Action("FindAGroup", "Home")" class="hidden-sm">find a group</a>
                     @*<a href="@Url.Action("Incentives", "Home")">incentives</a>*@
                     <a href="@Url.Action("ContactUs", "Home")">contact us</a>

                     @*<a href="@Url.Action("SignIn", "Home")" class="@(User.Identity.IsAuthenticated ? "hidden" : string.Empty)">log in</a>*@
                     <a href="#" data-toggle="modal" data-target="#LoginModal">
                        Login
                     </a>

                     <a href="@Url.Action("FindAGroup", "Home")" class="hidden-sm"><span class="glyphicon glyphicon-search"></span></a>
                  </div>
               </div>
            </div>
         </div>
         <div class="container">
            @RenderBody()
         </div>
         <footer class="container-fluid">
            <div id="testimonials" class="row container-fluid">
               <div class="container">
                  <div class="row">
                     <div class="col-xs-12 text-center">
                        <span id="happyCommunities">
                           happy communities
                        </span>
                        <br />
                        <span id="whatPeopleSay">
                           what people say
                        </span>
                        <br />
                        <img src="/Content/images/public/content/separator.png" class="img-responsive" />
                     </div>
                  </div>
                  <br /><br />
                  <div class="row">
                     <div class="col-md-12 col-md-offset-3 col-xs-offset-2">
                        <div class="media">
                           <div class="media-left">
                              <img src="/Content/images/public/content/profilpic2.png" class="img-responsive" />
                           </div>
                           <div class="media-right media-middle">
                              <strong>Peter Campbell</strong>
                              <br />
                              <i>Football Coach, Santa Ana California</i>
                              <br />
                              <img src="/Content/images/public/content/separator.png" />
                           </div>
                        </div>
                        <br />
                        <div class="text-muted small col-md-6 ">
