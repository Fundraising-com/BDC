                     <li><a href="@Url.Action("FindAGroup", "Home")">Find a Group</a></li>
                     @*<li><a href="@Url.Action("Incentives", "Home")">Incentives</a></li>*@
                     <li><a href="@Url.Action("ContactUs", "Home")">Contact Us</a></li>
