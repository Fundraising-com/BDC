<div class="row">
   
   <div class="col-sm-12" ng-cloak style="text-align:center; font-size:2em;color:#676767">
      <div style="width:70%; margin:auto" >
         <span style="font-weight:bold;color:#676767;">
            <br />
            Fill in the form to have you local Southwestern field representative send you targeted fundraising information
            <br /><br />
         </span>
      </div>
   </div>
</div>


<div class="row" ng-controller="RepresentativeInformationRequestedController as representativeInformationRequestedCtrl">
   <div class="col-sm-3"></div>
   <div class="col-sm-6">
      <form class="form-horizontal" name="requestInformationForm" ng-submit="requestInformationForm.$submitted && requestInformationForm.$valid && representativeInformationRequestedCtrl.Send();">
         <div class="form-group">
            <div class="col-sm-12">
               <input type="text" style="height:45px;font-size:14pt;"  class="form-control" id="view.FirstName" placeholder="First Name" ng-model="representativeInformationRequestedCtrl.view.FirstName" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input type="text" style="height:45px;font-size:14pt;" class="form-control" id="view.LastName" placeholder="Last Name" ng-model="representativeInformationRequestedCtrl.view.LastName" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input type="text" style="height:45px;font-size:14pt;" class="form-control" id="view.Group" placeholder="Group Name" ng-model="representativeInformationRequestedCtrl.view.Group" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input type="text" style="height:45px;font-size:14pt;" class="form-control" id="view.Address.Address1" placeholder="Address" ng-model="representativeInformationRequestedCtrl.view.Address.Address1" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input type="text" style="height:45px;font-size:14pt;" class="form-control" id="view.Address.City" placeholder="City" ng-model="representativeInformationRequestedCtrl.view.Address.City" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <select  style="height:45px;font-size:14pt;" class="form-control" id="view.Address.Country" ng-model="representativeInformationRequestedCtrl.view.Address.Country" ng-required="true" ng-change="representativeInformationRequestedCtrl.UpdateStates();" ng-options="country as country.Name for country in representativeInformationRequestedCtrl.countries"></select>
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <select style="height:45px;font-size:14pt;" class="form-control" id="view.Address.Region" ng-model="representativeInformationRequestedCtrl.view.Address.Region" ng-required="true" ng-options="state as state.Name for state in representativeInformationRequestedCtrl.states track by state.Code"></select>
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input type="text" style="height:45px;font-size:14pt;" class="form-control" id="view.Address.PostCode" placeholder="Zip Code" ng-model="representativeInformationRequestedCtrl.view.Address.PostCode" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input type="email" style="height:45px;font-size:14pt;" class="form-control" id="view.Email" placeholder="Email" ng-model="representativeInformationRequestedCtrl.view.Email" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input ui-mask="{{representativeInformationRequestedCtrl.phoneMask}}"  style="height:45px;font-size:14pt;" placeholder="Phone" type="text" class="form-control" id="view.Phone" ng-model="representativeInformationRequestedCtrl.view.Phone" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input type="number" style="height:45px;font-size:14pt;" class="form-control" id="view.NumberOfMembers" placeholder="No. of Group Members" ng-model="representativeInformationRequestedCtrl.view.NumberOfMembers" required ng-required="true">
            </div>
         </div>
         <div class="form-group">
            <div class="col-sm-12">
               <input type="text"  style="height:45px;font-size:14pt;" class="form-control" id="view.Website" placeholder="Group Website" ng-model="representativeInformationRequestedCtrl.view.Website" ng-required="false">
            </div>
         </div>
         <div class="form-group" ng-cloak>
            <div class="col-xs-12" style="text-align:center">
               <button type="submit" style="width:50%; margin:auto" class="btn btn-primary  btn-lg" ng-show="representativeInformationRequestedCtrl.ActionState != 1" ng-disabled="!requestInformationForm.$valid">Submit</button>
               <br />
               <span class="text-info" ng-show="representativeInformationRequestedCtrl.ActionState == 1">
                  <span class="glyphicon glyphicon-refresh glyphicon-refresh-animate" aria-hidden="true"></span> Sending your information...<br />
                  <progressbar class="progress-striped" max="100" value="representativeInformationRequestedCtrl.progress" type="warning" animate="true" style="margin-top:10px"></progressbar>
               </span>
               <span class="text-danger" ng-show="representativeInformationRequestedCtrl.ActionState == 3">
                  {{::representativeInformationRequestedCtrl.error.Message}}
               </span>
               <ul class="text-danger" ng-show="representativeInformationRequestedCtrl.ActionState == 3">
                  <li ng-repeat="e in representativeInformationRequestedCtrl.error.ModelStateErrors">
                     {{::e}}
                  </li>
               </ul>
            </div>
         </div>
      </form>
   </div>

</div>
