
@{
    ViewBag.Title = "KitRequestConfirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row nav-section">
    <div class="container">
        <div class="row">
            <ul class="breadcrumb">
                <li><a ng-href="/">Home</a></li>
                <li class="active">Request a Free Funraising Guide</li>
            </ul>
            @*{{section}}*@
        </div>
    </div>
</div>


<div class="container request-confirmation">
    <div class="row row-padding-sm">
        <div class="col-xs-12">
            <h3>Thank you for ordering your free guide!</h3>
        </div>
    </div>
    <div class="row" ng-cloak>
       <div class="col-xs-12 hidden-sm hidden-md hidden-xs">
          <img alt="ezfundlogo" ng-src="~/content/images/public/kit-confirmation-img.png" style="width:100%;" />
       </div>
       <div class="col-xs-12 visible-sm visible-md visible-xs" >
          <img alt="ezfundlogo" ng-src="~/content/images/public/mobile_kit-confirmation-img.png" style="width:100%;" />
       </div>
    </div>
    <div class="row row-padding-sm">
        <div class="col-xs-12">
            <h4>
                YOUR REQUEST HAS BEEN SUBMITTED! <br>
                Your printed Fundraising Guide is on its way. Meanwhile, you can get a digital copy here:
            </h4>
            <a class="btn btn-warning form-control" href="/content/pdf/ezfundkit.pdf" target="_blank">VIEW / DOWNLOAD</a>
</div>
    </div>
    <div class="row row-padding-sm">
        <div class="col-xs-12">
            <h4>
                Our Fundraising Consultants will be happy to help! <br>
                Calls us toll free at 1-800-991-8779 if you have any questions.
            </h4>
        </div>
    </div>
</div>