
@{
   Layout = "~/Views/Shared/_Layout.cshtml";
}
<div layout="column" ng-controller="ReportsController as reportsCtrl" ng-init="reportsCtrl.GetReports()">
   <div flex="100">
      <md-toolbar class="md-primary md-hue-1" md-scroll-shrink>
         <div class="md-toolbar-tools">
            <h2><ng-md-icon icon="search" style="fill: white" size="16"></ng-md-icon> Search:</h2>
            <md-input-container md-no-float>
               <input type="text" name="filter" ng-model="reportsCtrl.filter">
            </md-input-container>
         </div>
      </md-toolbar>
   </div>
   <div flex="100">
      <md-grid-list md-cols="1" md-cols-sm="2" md-cols-md="5" md-cols-gt-md="5" md-row-height="1:1" md-gutter="8px" md-gutter-gt-sm="4px" id="report-titles">
         <md-grid-tile ng-repeat="report in reportsCtrl.reports | filter: reportsCtrl.filter">
            <ng-md-icon icon="{{report.Icon}}" style="fill: red" size="32"></ng-md-icon>
            <span class="text-md-primary md-body-2">{{report.Name}} Report</span>
            <md-grid-tile-footer layout-align="center center">
               <md-button class="md-raised md-primary" ng-href="{{report.Url}}" flex>Go to Report</md-button>
            </md-grid-tile-footer>
         </md-grid-tile>
      </md-grid-list>
   </div>
</div>