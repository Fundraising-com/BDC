@using System.Configuration
@{
    Layout = null;
    ViewBag.Title = "Welcome to CustCare";
}
<!DOCTYPE html>
<html lang="en" >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Html.Partial("_Libraries")
</head>
<body>
    <div layout="column" layout-align="center center">

        <div>
            <h2>MGP CustCare</h2>
            <br />
            <span class="md-subhead">Please Login</span>
        </div>
        <form method="POST" name="login">
            <label for="firstName">Your first name</label>
            <input type="text" id="firstName" placeholder="Your name goes here" />
            <input type="submit" />
        </form>


        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <span>Username:</span> <input type="text" id="username" name="username" required/>
            <span>Password:</span> <input type="text" id="pwd" name="pwd" required/><br />
            <input type="submit" value="Submit" />
        }



    </div>
    @Scripts.Render("~/bundles/angular")
    <script src="https://cdn.rawgit.com/stevermeister/ngWig/master/dist/ng-wig.js" type="text/javascript"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ng-csv/0.3.6/ng-csv.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/angular-material-icons/0.7.1/angular-material-icons.min.js"></script>
    <script type="text/javascript">
   
    </script>
</body>
</html>
