<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<!-- Define some output appenders -->
	<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n" />
		</layout>
	</appender>
	<!-- FileAppender appends to a log and it is manually managed or size -->
	<appender name="FileAppender" type="log4net.Appender.FileAppender">
		<param name="File" value="StoreFront.Integration.log" />
		<!-- Example using environment variables in params -->
		<!-- <param name="File" value="${TMP}\\ApplicationKit.log" /> -->
		<param name="AppendToFile" value="true" />
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="- %d [%t] %-5p %c\n [%x] - \r\n%m%n\r\n" />
		</layout>
	</appender>
	<appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
		<to value="to@to.com" />
		<from value="from@from.com" />
		<subject value="StoreFront Integration Error" />
		<smtpHost value="MAILSERVER" />
		<bufferSize value="512" />
		<lossy value="true" />
		<evaluator type="log4net.Core.LevelEvaluator">
			<threshold value="ERROR" />
		</evaluator>
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%newline%date [%thread] %-5level %logger [%property{NDC}] - %message%newline%newline%newline" />
		</layout>
	</appender>
	<!-- Setup the root category, add the appenders and set the default level -->
	<logger name="StoreFront.Integration.Integrator">
		<level value="INFO" />
		<appender-ref ref="FileAppender" />
	</logger>
	<logger name="StoreFront.Integration.ImportOrder">
		<level value="INFO" />
		<appender-ref ref="FileAppender" />
	</logger>
	<logger name="StoreFront.Integration.ExportOrder">
		<level value="ALL" />
		<appender-ref ref="FileAppender" />
		<appender-ref ref="SmtpAppender"></appender-ref>
	</logger>
	<logger name="StoreFront.Integration.ImportCustomer">
		<level value="INFO" />
		<appender-ref ref="FileAppender" />
	</logger>
	<logger name="StoreFront.Integration.ImportInventory">
		<level value="INFO" />
		<appender-ref ref="FileAppender" />
	</logger>
	<logger name="StoreFront.Integration.ImportOrderStatus">
		<level value="INFO" />
		<appender-ref ref="FileAppender" />
	</logger>
	<logger name="StoreFront.Integration.ImportProduct">
		<level value="INFO" />
		<appender-ref ref="FileAppender" />
	</logger>
</log4net>