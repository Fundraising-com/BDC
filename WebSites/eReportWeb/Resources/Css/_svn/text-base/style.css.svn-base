/*Particular to eReportWeb*/
a:hover
{
	text-decoration: none;
}

a:link
{
	color:#F3642B;
}

a:visited
{
	color:#5784b6;
}

body 
{
	font-family: Arial, Helvetica, Sans-Serif;
	font-size: 13px;
	color: #333333;
	padding: 10px;
}

h1
{
	padding: 5px;
	border: solid 1px #888;
	font-size: 20px;
	background-color: #ECECEC;
}

.Login
{
	padding: 30px;
	background-color: #F1F1F1;
	border: solid 1px #000000;
}

.buttonFlat
{
	border: solid 1px #000000;
}

input
{
	font-size: 12px;
}

.BigText
{
	font-family:Arial;
	font-size: 16px;
	text-decoration:none;
}

.BigTextBold
{
	font-family:Arial;
	font-size: 16px;
	text-decoration:none;
	font-weight: bold;
}

.NormalText
{
	font-family:Arial;
	font-size: 13px;
	text-decoration:none;
}

.NormalTextBold
{
	font-family:Arial;
	font-size: 13px;
	text-decoration:none;
	font-weight: bold;
}

.SmallText
{
	font-family:Arial;
	font-size: 11px;
	text-decoration:none;
}

.SmallTextBold
{
	font-family:Arial;
	font-size: 11px;
	text-decoration:none;
	font-weight: bold;
}

/* FOREGROUND COLORS */

.Normal
{
	color:#333333;
}

.Passive
{
	color:#5784b6;
}

.Active
{
	color:#F3642B;
}


.ImportantMessage
{
	color:#FF0000;
}